{% extends 'base.html.twig' %}

{% block title %}Condicion index{% endblock %}

{% block body %}
    <h1></h1>
<div class="container">
 <h2 style="text-align:left">Condicion</h2>
    <table  class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for condicion in condicions %}
            <tr>
                <td>{{ condicion.id }}</td>
                <td>{{ condicion.descripcion }}</td>
                <td>
                    <a href="{{ path('app_condicion_show', {'id': condicion.id}) }}" class="btn btn-info">Mostrar</a>
                    <a href="{{ path('app_condicion_edit', {'id': condicion.id}) }}" class="btn btn-warning">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="container">
    <a href="{{ path('app_condicion_new') }}" class="btn btn-success">Nuevo</a>
</div>
{% endblock %}