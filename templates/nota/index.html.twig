{% extends 'base.html.twig' %}

{% block title %}Nota index{% endblock %}

{% block body %}
    <h1>Nota index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notum in notas %}
            <tr>
                <td>{{ notum.id }}</td>
                <td>{{ notum.fecha }}</td>
                <td>{{ notum.descripcion }}</td>
                <td>
                    <a href="{{ path('app_nota_show', {'id': notum.id}) }}">show</a>
                    <a href="{{ path('app_nota_edit', {'id': notum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_nota_new') }}">Create new</a>
{% endblock %}
