{% extends 'base.html.twig' %}

{% block title %}Personal index{% endblock %}

{% block body %}
    <h1>Personal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dni_p</th>
                <th>Legajo_p</th>
                <th>Nombres_p</th>
                <th>Apellidos_p</th>
                <th>Tel_p</th>
                <th>Declaracionjurada</th>
                <th>Copiadni_p</th>
                <th>Rol</th>
                <th>Fechanacimiento_p</th>
                <th>Cuil_p</th>
                <th>Direccion_p</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personal in personals %}
            <tr>
                <td>{{ personal.id }}</td>
                <td>{{ personal.dniP }}</td>
                <td>{{ personal.legajoP }}</td>
                <td>{{ personal.nombresP }}</td>
                <td>{{ personal.apellidosP }}</td>
                <td>{{ personal.telP }}</td>
                <td>{{ personal.declaracionjurada }}</td>
                <td>{{ personal.copiadniP }}</td>
                <td>{{ personal.rol }}</td>
                <td>{{ personal.fechanacimientoP }}</td>
                <td>{{ personal.cuilP }}</td>
                <td>{{ personal.direccionP }}</td>
                <td>
                    <a href="{{ path('app_personal_show', {'id': personal.id}) }}">show</a>
                    <a href="{{ path('app_personal_edit', {'id': personal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_personal_new') }}">Create new</a>
{% endblock %}
